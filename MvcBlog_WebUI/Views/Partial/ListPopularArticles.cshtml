@using MvcBlog.Model
@model List<Article>

@if (Model.Count > 0)
{
<div class="popular-widget widget">
    <h3>Popüler</h3>
    <ul class="popular-list">
        @foreach (Article item in Model)
        {
            <li>
                @*<img alt="" src="@item.Photo.ThumbnailPath">*@ @*Sonra yapacağım*@
                <div class="side-content">
                    <h2><a href="/Article/Detail/@item.Id">@item.ArticleName.ToUpper()</a></h2>
                    <a href="/Article/ListByDate?year=@item.PublishDate.Value.Year&month=@item.PublishDate.Value.Month"><p>@item.PublishDate.Value.ToString("MMMM yyyy")</p></a>
                </div>
            </li>
        }  
    </ul>
</div>
}
else
{
    <p>Makale bulunamadı!</p>
}
