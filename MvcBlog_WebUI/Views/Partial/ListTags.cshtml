@using MvcBlog.Model
@model List<Tag>

@if (Model.Count > 0)
{
    <div class="tags-widget widget">
        <h3>Etiketler</h3>
        <ul class="tags-list">
            @foreach (Tag item in Model)
            {
                <li><a href="/Tag/Index/@item.TagId">@item.TagName (@item.Articles.Count)</a></li>
            }
        
        </ul>
    </div>
}
else
{
    <p>Etiket bulunamadı!</p>
}


